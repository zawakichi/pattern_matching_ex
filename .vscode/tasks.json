{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "template.cpp",
                "-I/usr/local/include/opencv4",
                "-o",
                "${workspaceRoot}/a.out"
            ],
            "type": "shell",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}